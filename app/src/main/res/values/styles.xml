<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <!-- Navigation Drawer -->
    <style name="NavigationDrawerButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/edit_text_width</item>
        <item name="android:layout_height">@dimen/drawer_elem_height</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:background">@drawable/button_selector_pink_white</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
    </style>

</resources>
